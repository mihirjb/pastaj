<%= form_for @payslip, :html => { :multipart => true } do |f| -%>
<div class="field">
	<%= f.label :payslipnum, "Payslip Number" %>
	<%= f.text_field :payslipnum %>
</div>  

<div class="field">
	<%= f.label :party, "Paid to" %>
	<%= f.text_field :party %>
</div>

<div class="field">
	<%= f.label :status, "Status of transaction" %>
	<%= f.text_field :status %>
</div>

<div class="field">
<%= f.submit "Add", :disable_with => 'Adding...' %>
</div>
<% end -%>